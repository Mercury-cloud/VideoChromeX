{
  "manifest_version": 2,

  "name": "Video Record My Life",
  "description": "",
  "version": "1.0.5",
  "browser_action": {
		"default_icon": "icon128.png"
	},
	"permissions": [
		"storage",
		"downloads",
		"file:///",
		"alarms",
		"https://archive.org/*",
		"https://ia801204.us.archive.org/*"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://ia801204.us.archive.org https://archive.org; object-src 'self';",
	"icons": { 
		"16": "icon16.png",
		"48": "icon48.png",
	 	"128": "icon128.png" 
	}
}
